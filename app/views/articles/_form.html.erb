<%= form_with model: @article, local: true do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        <% @article.errors.full_messages_for(:title).each do |message| %>
            <div class="error">
                <%= message %>
            </div>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
        <% @article.errors.full_messages_for(:body).each do |message| %>
            <div class="error">
                <%= message %>
            </div>
        <% end %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>


<% end %>
        <%= button_to 'Back', articles_path, method: :get %>